<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.UsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/users/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/InjectData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.UserDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ProductDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShopingCardAddProductToShopController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProductToSoppingCard</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShopingCardUserAddProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProductToSoppingCard</servlet-name>
        <url-pattern>/products/addtocard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userShoppingCard</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShopingCardUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userShoppingCard</servlet-name>
        <url-pattern>/shoppingcard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allShoppingCards</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.ShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allShoppingCards</servlet-name>
        <url-pattern>/allcards</url-pattern>
    </servlet-mapping>
</web-app>
