<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>bogdan.internetshop.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>bogdan.internetshop.controller.user.UsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>bogdan.internetshop.controller.user.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>bogdan.internetshop.controller.user.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/users/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>bogdan.internetshop.controller.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/inject-data</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>bogdan.internetshop.controller.product.GetAllProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>bogdan.internetshop.controller.product.DeleteProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>addProductToShop</servlet-name>
        <servlet-class>bogdan.internetshop.controller.product.AddProductToShopController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProductToShop</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProductToSoppingCard</servlet-name>
        <servlet-class>bogdan.internetshop.controller.shoppingcart.AddProductToShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProductToSoppingCard</servlet-name>
        <url-pattern>/products/addtocart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userShoppingCart</servlet-name>
        <servlet-class>bogdan.internetshop.controller.shoppingcart.GetShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userShoppingCart</servlet-name>
        <url-pattern>/shoppingcart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productsFromShoppingCart</servlet-name>
        <servlet-class>bogdan.internetshop.controller.shoppingcart.GetProductsFromShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productsFromShoppingCart</servlet-name>
        <url-pattern>/shoppingcart/getproducts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductsFromShoppingCarts</servlet-name>
        <servlet-class>bogdan.internetshop.controller.shoppingcart.DeleteProductFromShoppingCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProductsFromShoppingCarts</servlet-name>
        <url-pattern>/shoppingcart/deleteproduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allShoppingCarts</servlet-name>
        <servlet-class>bogdan.internetshop.controller.shoppingcart.GetAllShoppingCartsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allShoppingCarts</servlet-name>
        <url-pattern>/shoppingcart/allcards</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUserOrdes</servlet-name>
        <servlet-class>bogdan.internetshop.controller.order.GetUserOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUserOrdes</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>doOrder</servlet-name>
        <servlet-class>bogdan.internetshop.controller.order.CompleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doOrder</servlet-name>
        <url-pattern>/orders/completeorder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>viewOrder</servlet-name>
        <servlet-class>bogdan.internetshop.controller.order.OrderViewController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewOrder</servlet-name>
        <url-pattern>/orders/vieworder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrder</servlet-name>
        <servlet-class>bogdan.internetshop.controller.order.DeleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteOrder</servlet-name>
        <url-pattern>/orders/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>bogdan.internetshop.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>bogdan.internetshop.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>bogdan.internetshop.web.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>authorizationFilter</filter-name>
        <filter-class>bogdan.internetshop.web.filters.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
